<Page x:Class="TP1_Projet.Views.CreerCompte"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TP1_Projet.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Créer un Compte">


    <Grid Margin="0,0,0,-6">

        <Grid.RowDefinitions >
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        


        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Grid.Column="0" Grid.Row="0" Width="780"  >
            <Label Content="Nom" FontSize="22" Margin="10" Height="41" Width="100" RenderTransformOrigin="0.5,0.5"  >
                <Label.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="-0.395"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Label.RenderTransform>
            </Label>
            <TextBox TextWrapping="Wrap" Text="" FontSize="22" Height="41" Width="233" />
            <Label Content="Prenom" FontSize="22" Height="41" Width="100" Margin="15"/>
            <TextBox TextWrapping="Wrap" Text="" FontSize="22" Height="41" Width="260" TextChanged="TextBox_TextChanged" />
        </StackPanel>

        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Grid.Column="0" Margin="0,65,0,0" Grid.RowSpan="2" Width="780"  >

            <Label Content="Date de Naissance" Margin="10"  FontSize="22" Height="41" Width="346"/>
            <TextBox TextWrapping="Wrap" Text="" FontSize="22" Height="41" Width="375" />

        </StackPanel>


        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Grid.Column="0" Grid.Row="1" Margin="0,65,0,0" Grid.RowSpan="2" Width="780"  >

            <Label Content="Je suis" Margin="10" FontSize="22" Height="41" Width="349" />
            <RadioButton Content="Un homme" FontSize="22" Height="41"   Width="225"/>
            <RadioButton Content="Une femme" FontSize="22" Height="41"  Width="135"/>

        </StackPanel>

        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Grid.Column="0" Grid.Row="2" Margin="0,65,0,65" Grid.RowSpan="3" Width="780" >

            <Label Content="Ville" Margin="10" FontSize="22" Height="41" Width="360"/>
            <ComboBox FontSize="22" Height="41" Width="357" >
                <ComboBoxItem Content="choix" FontSize="16"></ComboBoxItem>
            </ComboBox>
        </StackPanel>

        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Grid.Column="0" Grid.Row="4" Margin="0,0,0,65" Grid.RowSpan="2" Width="780"  >


            <Label Content="Date d'entrée en fonction" Margin="10" FontSize="22" Height="41" Width="354"/>
            <DatePicker FontSize="22" Height="41" Width="366"/>

        </StackPanel>
        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Grid.Column="0" Grid.Row="5" Margin="0,0,0,65" Grid.RowSpan="2" Width="780"  >


            <Label Content="Adresse e-mail" Margin="10"  FontSize="22" Height="41" Width="358"/>
            <TextBox TextWrapping="Wrap" Text="" FontSize="22" Height="41" Width="363"  />
        </StackPanel>
        <StackPanel HorizontalAlignment="Center" Grid.Column="0" Grid.Row="6"  Orientation="Horizontal" >

            <Button Content="Créer" Command="{Binding MedecinCommand}" Margin="10"  FontSize="22" Height="41" Width="308"/>
            <Button Content="Quitter" Click="Button_Click" FontSize="22" Margin="10"  Height="41" Width="379" />

        </StackPanel>


    </Grid>
</Page>
