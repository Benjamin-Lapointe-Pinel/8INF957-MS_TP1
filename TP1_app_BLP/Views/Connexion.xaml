<Window x:Class="TP1_Projet.Views.Connexion"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TP1_Projet.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Connexion">

    <Grid>

        <Grid.RowDefinitions >
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>

        </Grid.RowDefinitions>


        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="0" Grid.Column="0">
            <Label Content="Médecin" HorizontalAlignment="Left" FontSize="22" Margin="10,60,0,0" Height="39" Width="174"/>
            <ComboBox HorizontalAlignment="Left" FontSize="22" Margin="10,60,0,0" Height="39" Width="174" >
                <ComboBoxItem Content="Choice"></ComboBoxItem>
            </ComboBox>

        </StackPanel>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Grid.Row="1">
            <Button Content="Se Connecter" Height="51" VerticalAlignment="Center" FontSize="22" Width="376" />
            <Button Content="Créer un Compte" VerticalAlignment="Center" Height="51" Width="376" FontSize="22" Margin="0,40,0,0"/>
        </StackPanel>


    </Grid>
</Window>
